<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Infor</title>
	<link rel="stylesheet" href="/dist/css/login.css">
	<script type="text/javascript" src="/dist/js/validateInforGuest.js"></script>
  </head>
  <body>
    <div class="login-wrap">
	<div class="login-html">
        <%if(checkInfo == false){%>
        <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Forgot Password</label>
		<input id="tab-2"  type="radio hidden" name="tab" class="sign-up"><label for="tab-2" class="tab"></label>
		<div class="login-form">
      <form name="RegForm" action="chancepass" method="POST" onsubmit="return validateResetPass1()">
			<div class="sign-in-htm">
				<div class="group">
					<label for="user" class="label">Username</label>
					<input id="username" type="text" name="username"  class="input" required>
				</div>
				<div class="group">
					<label for="mail" class="label">Mail</label>
					<input id="mail" type="text" name="mail"  class="input" required>
				</div>	
                <div class="group">
					<label for="pass" class="label">New Password</label>
					<input id="password" name="password" type="password" class="input" data-type="password" autocomplete="off" required>
				</div>
				<div class="group">
					<label for="pass" class="label">Repeat Password</label>
					<input id="password-repeat" name="password1" type="password" class="input" data-type="password" autocomplete="off" required>
				</div>		
				<div class="group">
					<input type="submit" class="button" value="Save">
				</div>             
			</div>
      </form>
		
      <%}else{%>
        <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Chance Password</label>
		<input id="tab-2"  type="radio hidden" name="tab" class="sign-up"><label for="tab-2" class="tab"></label>
		<div class="login-form">
      <form name="RegForm" action="chancepass" method="POST" onsubmit="return validateResetPass2()">
			<div class="sign-in-htm">
				<div class="group">
					<label for="user" class="label">Username</label>
					<input id="username" type="text" name="username" value="<%= mess[0].username%>" class="input" readonly>
				</div>
				<div class="group">
					<label for="mail" class="label">Mail</label>
					<input id="mail" type="text" name="mail" value="<%= mess[0].mail%>" class="input" readonly>
				</div>	
                <div class="group">
					<label for="pass" class="label">Old Password</label>
					<input id="password-old" name="password2" type="password" class="input" data-type="password" autocomplete="off" required>
				</div>
                <div class="group">
					<label for="pass" class="label">New Password</label>
					<input id="password-new" name="password" type="password" class="input" data-type="password" autocomplete="off" required>
				</div>
				<div class="group">
					<label for="pass" class="label">Repeat Password</label>
					<input id="password-repeat" name="password1" type="password" class="input" data-type="password" autocomplete="off" required>
				</div>		
				<div class="group">
					<input type="submit" class="button" value="Save">
				</div>             
			</div>
      </form>
      <%}%>
			<div class="sign-up-htm">
        <form action="#" method="POST">
				<div class="group">
					<label for="user" class="label">Username</label>
					<input id="user"  name="username" type="text" class="input">
				</div>
				<div class="group">
					<label for="pass" class="label">Password</label>
					<input id="pass" name="password" type="password" class="input" data-type="password" autocomplete="off" required>
				</div>
				<div class="group">
					<label for="pass" class="label">Repeat Password</label>
					<input id="pass" name="password1" type="password" class="input" data-type="password" autocomplete="off" required>
				</div>
				<div class="group">
					<label for="pass" class="label">Email Address</label>
					<input id="pass" name="mail" type="text" class="input">
				</div>
				<div class="group">
					<input type="submit" class="button" value="Sign Up">
				</div>
				<div class="hr"></div>
				<div class="foot-lnk">
					<label for="tab-1">Already Member?</a>
				</div>
        </form>
			</div>
		</div>
	</div>
</div>
  </body>
</html>
