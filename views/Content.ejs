      <img class="imgr" src="<%= mess[0].image%>"  alt="" width="600" height="500" />
      <p><%= mess[0].content%></p>

      <div id="comments">
        <h2>Comments</h2>
        <ul class="commentlist">
        <%if (listComment.length != 0){%>
        <%for(var i=0;i < listComment.length;i++){%>
        <%if(i % 2 == 0){%>
          <li class="comment_odd">
            <div class="author"><img class="avatar" src="https://cdna.artstation.com/p/assets/images/images/003/731/234/original/pontus-ornemark-sunglasses-man-walking-animation.gif?1476900023" width="32" height="32" alt="" /><span class="name"><a href="#"><%= listComment[i].username%></a></span> <span class="wrote">wrote:</span></div>
            <div class="submitdate"><a href="#"><%= listComment[i].date%></a></div>
            <p><%= listComment[i].content%></p>
          </li>
          <%}else{%>
            <li class="comment_even">
            <div class="author"><img class="avatar" src="https://cdna.artstation.com/p/assets/images/images/003/235/548/original/jamie-fox-girlpoint-animatedmassive.gif?1471445378" width="32" height="32" alt="" /><span class="name"><a href="#"><%= listComment[i].username%></a></span> <span class="wrote">wrote:</span></div>
            <div class="submitdate"><a href="#"><%= listComment[i].date%></a></div>
            <p><%= listComment[i].content%></p>
          </li>
        <%}%>
        <%}%>
        <%}%>
        </ul>
      </div>
      <h2>Write A Comment</h2>
      <div id="respond">
        <form action="addComment" method="post">
          
          <%if(kt == 1){%>
          <p>
          <label for="name" name="name"><small>Name : <%= user%></small></label>         
          <input type="hidden" name="name" value="<%= iduser%>">
          </p>
          <input type="hidden" name="idnews" value="<%= mess[0].idnews%>">
          <%}%>
          
          <p>
            <textarea name="comment" id="comment" cols="100%" rows="10"></textarea>
            <label for="comment" style="display:none;"><small>Comment (required)</small></label>
          </p>
          <p>
            <input name="submit" type="submit" id="submit" value="Submit Form" />
            &nbsp;
            <input name="reset" type="reset" id="reset" tabindex="5" value="Reset Form" />
          </p>
        </form>
      </div>
    </div>
    <div class="column">
        <%for (var i = list.length-1; i>list.length-5;i--){%>
      <div id="featured">
        <ul>
          <li>
            <h2><%= list[i].title%></h2>
            <p class="imgholder"><img src="<%= list[i].image%>" width="240" height="90" alt="" /></p>
            <p><%= list[i].describe%></p>
            <p class="readmore"><a href="/news/<%= list[i].idnews%>">Xem chi tiet &raquo;</a></p>
          </li>
        </ul>
      </div>
